<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>posts</title>
    <link rel="stylesheet" href="posts.css">
    <style>
        form{
            display: inline;
        }
    </style>
  </head>
  <body>
    <div class="container-fluid row m-3">
        <div class="col-4">
            <div class="card" style="width: 22  rem;">
                <div class="card-body bg-primary text-white">
                  <h5 class="card-title">{{userinfo.fullname}}</h5>
                  <h6 class="card-subtitle mb-2 text-white">@{{userinfo.username}}</h6>
                  <p class="card-text">{{userinfo.headline}}</p>
                </div>
              </div>
            <button type="button" class="btn btn-primary m-3" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@mdo">Add Post</button>
            
            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">create a post</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body ">
                            <form action="/addposts" method="post"> 
                                <input type="hidden" name="profile" value="{{userinfo.profile}}">
                                <input type="hidden" name='username' value="{{userinfo.username}}">
                                <div class="mb-3">
                                    <label for="message-text" class="col-form-label">Message:</label>
                                    <textarea class="form-control" name="content" id="message-text"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">post</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <div class="col-8">
            {{#each data}}
            <div class="card bg-black text-white">
                <div class="card-header">
                  <h4>{{username}}</h4>

                  <h5 class="card-title">{{profile}}</h5>
                </div>
                <div class="card-body">
                  
                  <p class="card-text text-danger ">{{content}}</p>
                </div>
                <span class="m-3">
                    <form action="/likes" method="post"> 
                    <input type="hidden" name="content" value="{{content}}">
                    <button type="submit" class="btn btn-danger">likes</button>
                    </form>
                <button class="btn btn-primary" disabled>{{likes}}</button>
                <form action="/shares" method="post"> 
                    <input type="hidden" name="content" value="{{content}}">
                    <button type="submit" class="btn btn-success">shares</button>
                    </form>
                <button type="submit" class="btn btn-primary" disabled > {{shares}}</button>
                <form action="/delete" method="post">
                    <input type="hidden" name="content" value="{{content}}">
                    <button type="submit" class="btn btn-success">delete</button>
                </form>
                </span>
              </div>
              {{/each}}
        </div>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>